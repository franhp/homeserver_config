defaultEntryPoints = ["https", "http"]
#logLevel = "DEBUG"
#debug = true

[acme]
email = "{{ email }}"
storage = "acme.json"
entryPoint = "https"
onDemand = true
onHostRule = true
    [acme.tlsChallenge]

[entryPoints]
  [entryPoints.https]
   address = ":443"
  	[entryPoints.https.tls]
  [entryPoints.http]
   address = ":80"
  [entryPoints.dashboard]
    address = ":8000"
    [entryPoints.dashboard.auth]
      [entryPoints.dashboard.auth.basic]
        users = ["{{ basic_auth }}"]

[api]
entrypoint="dashboard"

[docker]
endpoint = "unix:///var/run/docker.sock"
watch = true
exposedByDefault = false
domain = "{{ private_domain }}"